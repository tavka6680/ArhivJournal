<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetListExcelDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="Для выбора используйте длительное нажатие."
            android:minHeight="40dp"


           />

        <CheckBox
            android:id="@+id/AddCardNOTFOUNDCheckBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Карта не найдена" />

        <CheckBox
            android:id="@+id/AddCardOrderCheckBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заказ карты в другом офисе" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/ListViewExelGet"
                android:layout_width="match_parent"
                android:scrollbars="vertical"
android:listSelector="@color/cardview_dark_background"
                android:layout_height="match_parent" >


            </ListView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>